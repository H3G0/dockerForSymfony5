.DEFAULT_GOAL = help
#------------------------------------------------------------------------------------------------
# Variables
#------------------------------------------------------------------------------------------------

#------------------------------------------------------------------------------------------------
# Global
#------------------------------------------------------------------------------------------------
help:
	@grep -E '(^[a-zA-Z_-]+:.*?##.*$$)|(^##)' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[32m%-15s\033[0m %s\n", $$1, $$2}' | sed -e 's/\[32m##/[33m/'

#------------------------------------------------------------------------------------------------
# Docker
#------------------------------------------------------------------------------------------------
docker-run: ## start stack docker
	docker-compose up -d
docker-stop: ## stop stack docker
	docker-compose stop
